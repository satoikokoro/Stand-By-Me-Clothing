<div class= "container">
  <div class= "row">
    <div class= "col">
      <h3 style="width: 16%; text-align: center; margin: 15px; background: #000033; color:white">衣類登録</h3>
      <div class="row justify-content-lg-center">
        <%= form_with model: @cloth, url: cloths_path, method: :post, local: true do |f| %>
        <table class="table table-borderless mt-3">
          <tbody>
            <tr>
              <td><%= f.label "衣類画像" %></td>
              <td><%= f.file_field :image, accept: "image/*",:class => "form-control-Small-file input example" %></td>
            </tr>
            <tr>
              <td><%= f.label "衣類名" %></td>
              <td><%= f.text_field :name, placeholder: "衣類名" %></td>
            </tr>
            <tr>
              <td><%= f.label "衣類説明" %></td>
              <td><%= f.text_area :description, placeholder: "ここに説明文を記述します" %></td>
            </tr>
            <tr>
              <td><%= f.label "ジャンル" %></td>
              <td><%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "--選択してください--"} %></td>
            </tr>
            <tr>
              <td><%= f.label "収納先" %></td>
              <td><%= f.collection_select :storage_id, @storages, :id, :name, {include_blank: "--選択してください--"} %></td>
            </tr>
            <tr>
              <td><%= f.label "カラー" %></td>
              <td><%= f.label "右から選択してください" %></td>
              <td><%= f.collection_check_boxes :color_ids, @colors, :id, :name do |color| %>
                  <%= color.label { color.check_box + color.text } %>
                  <% end %></td>
            </tr>
              <!--e-numを用いて投稿ステータス追加予定-->
              <!--<td>%= f.label "衣類の共有" %></td>-->
                  <!--%= f.label :privacy_status, '公開' %>-->
                  <!--%= f.radio_button :privacy_status, 'public' %>-->
                  <!--%= f.label :privacy_status, '非公開' %>-->
                  <!--%= f.radio_button :privacy_status, 'private' %>-->
            <tr>
              <td><%= f.submit "衣類登録", class: "btn btn-success px-5" %></td>
            </tr>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>