<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center my-4" style="background: #000033; color: white;">会員登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <div class="form-group row">
          <label for="name" class="col-sm-3 col-form-label">名前</label>
          <div class="col-sm-9">
            <%= f.text_field :name, id: "name", class: "form-control", placeholder: "ニックネーム" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="introduction" class="col-sm-3 col-form-label">プロフィール</label>
          <div class="col-sm-9">
            <%= f.text_area :introduction, id: "introduction", class: "form-control", placeholder: "よろしくお願いします。", autofocus: true %>
          </div>
        </div>
        <div class="form-group row">
          <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
          <div class="col-sm-9">
            <%= f.email_field :email, id: "email", class: "form-control", placeholder: "sample@example.com", autocomplete: "email" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="password" class="col-sm-3 col-form-label">パスワード(6文字以上)</label>
          <div class="col-sm-9">
            <%= f.password_field :password, id: "password", class: "form-control", autocomplete: "new-password" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="password_confirmation" class="col-sm-3 col-form-label">パスワード(確認用)</label>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, id: "password_confirmation", class: "form-control", autocomplete: "new-password" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-9 offset-sm-3">
            <%= f.submit "新規登録", class: 'btn btn-lg btn-success px-5' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <h3 class="text-center my-4" style="background: #eee;">既に登録済みの方</h3>
      <p class="text-center">
        <u class="text-primary"><%= link_to "こちら", user_session_path %></u> からログインしてください
      </p>
    </div>
  </div>
</div>
