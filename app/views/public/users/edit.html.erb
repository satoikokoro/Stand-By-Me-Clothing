<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-5">
      <h2 class="text-center">ユーザー編集</h2>

      <%= form_with model:@user, url: user_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :画像 %>
          <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>

        <div class="form-group">
          <%= f.label :ニックネーム %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>

        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "保存する", class: 'btn btn-success m-3' %>
          <p>退会は<%= link_to "こちら", users_withdraw_path %>から</p>
        </div>
      <% end %>
    </div>
  </div>
</div>