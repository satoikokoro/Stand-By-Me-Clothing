<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td><%= link_to user_path(user.id) do %>
        <%= image_tag user.get_user_image, size: "50x50" %>
        <% end %>
      </td>
      <td><%= link_to user_path(user.id) do %>
        <%= user.name %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>