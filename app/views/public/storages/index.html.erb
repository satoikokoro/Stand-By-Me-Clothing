<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1 mt-5">
      <div>
        <div class="d-flex align-items-end mb-3">
          <h2 class="m-0 font-weight-bold">＜収納先一覧＞</h2>
          <span class="ml-3">(全<%= @storages.count %>件)</span>
        </div>
        <div class="row mt-3 mb-3">
          <% @storages.each do |storage|%>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
              <div class="card bg-transparent border-0" style="width: 18rem;">
                <%= link_to storage_path(storage) do%>
                  <p class="img-wrap"><%= image_tag storage.get_storage_image(0, 0), width: "150", format: "jpeg", fallback: "no_image.jpeg" %></p>
                <% end %>
                <div class="card-body">
                  <p class="item-details item-name card-text font-weight-bold"><%= storage.name %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= paginate @storages, class:"text-center" %>
</div>