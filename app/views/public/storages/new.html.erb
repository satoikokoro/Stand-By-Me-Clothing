<div class="container">
 <div class="pt-5">
   <%= form_with model: @storage, url: storages_path, method: :post, local: true do |f| %>
  <table class="table table-borderless">
   <tbody class="row justify-content-start">
    <tr class="pt-4">
     <th>収納追加</th>
     <td><%= f.file_field :image, accept: "image/*",:class => "form-control-Small-file in input example" %></td>
     <td><%= f.text_field :name, placeholder:"収納名" %></td>
     <td><%= f.submit '新規登録', class: "btn btn-sm btn-success" %></td>
    </tr>
   </tbody>
   <% end %>
  </table>
 </div>
</div>
<div class="container">
 <div class="pt-3">
  <table>
   <thead>
    <td></td>
    <th class="col-5" style="width: 100%; text-align: center; margin: 15px; background: #eee">収納場所</th>
   </thead>
    <% @storages.each do |storage| %>
   <tbody>
    <tr class="table">
      <td><%= image_tag storage.get_storage_image(0,0), style: "width:100px; height:100px;" %></td>
     <td><%= storage.name %></td>
     <td></td>
     <td>
       <%= link_to "編集する", edit_storage_path(storage.id), class: "btn-success btn-sm mx-auto" %>
       <%= link_to "削除する", storage_path(storage.id), method: :delete, class: "btn-sm btn-danger" %>
       </td>

    </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</div>