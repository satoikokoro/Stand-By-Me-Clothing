 <% if cloth.favorited_by?(current_user) %>
  <%= link_to cloth_favorites_path(cloth), method: :delete, remote: true do %>
      <i class="fa fa-thumbs-up"　aria-hidden="true" style="color: red;"></i>
      <%= cloth.favorites.count %> いいね
  <% end %>
 <% else %>
  <%= link_to cloth_favorites_path(cloth), method: :post, remote: true do %>
      <i class="fa fa-thumbs-up"　aria-hidden="true" style="color: gray;"></i>
      <%= cloth.favorites.count %> いいね
  <% end %>
 <% end %>