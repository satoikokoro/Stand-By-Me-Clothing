 <% if cloth.favorited_by?(current_user) %>
  <%= link_to cloth_favorites_path(cloth), method: :delete do %>
      <i class="fa fa-thumbs-up"></i>
      <%= cloth.favorites.count %> いいね
  <% end %>
 <% else %>
  <%= link_to cloth_favorites_path(cloth), method: :post do %>
      <i class="fa fa-thumbs-up"></i>
      <%= cloth.favorites.count %> いいね
  <% end %>
 <% end %>