<div class="container">
  <div class="container px-2 px-md-0 pt-5">
    <div class="row">
      <div class="col-md-4">
        <h3 class="p-2 text-center bg-danger text-white">User詳細</h3>
        <div class="text-center">
          <%= image_tag @user.get_user_image, size: "200x200", class: "img-fluid rounded-circle" %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table table-borderless mt-4">
            <thead>
              <tr>
                <th colspan="2" class="text-center"><h2>User Info</h2></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th>User ID</th>
                <td><%= @user.id %></td>
              </tr>
              <tr>
                <th>Name</th>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <th>Introduction</th>
                <td><%= @user.introduction %></td>
              </tr>
              <tr>
                <th>User Status</th>
                <td>
                  <% if @user.is_deleted == false %>
                    <strong class="text-success">有効</strong>
                  <% else %>
                    <strong class="text-secondary">停止</strong>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="text-center">
          <%= link_to "利用状況管理", edit_admin_user_path, class: "btn btn-md btn-primary mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>