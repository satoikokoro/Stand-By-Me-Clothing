<div class= "container">
    <div class= "container px-5 px-sm-0 pt-5">
        <div class= "row">
            <div class= "col-md-3"
                <h3 class="p-md-2" style="width: 70%; text-align: center; margin: 15px; background: #7f141a; color:white">User詳細</h3>
                <table class="table">
                  <tbody>
                    <tr>
                      <%= image_tag @user.get_user_image, size: "200x200" %>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="col-md-8 offset-md-1">

                <table class="table table-hover table-inverse table-borderless" style="margin-top: 80px;">
                  <tbody>
                    <tr>
                      <th>User ID</th></th>
                      <td><%= @user.id %></td>
                    </tr>
                    <tr>
                      <th>Name</th></th>
                      <td><%= @user.name %></td>
                    </tr>
                    <tr>
                      <th>Introduction</th>
                      <td><%= @user.introduction %></td>
                    </tr>
                    <tr>
                      <th>User Status</th>
                      <td>
                        <% if @user.is_deleted == false %>
                        <strong class="text-success">有効</strong>
                        <% else %>
                        <strong class="text-secondary">停止</strong>
                        <% end %>
                      </td>
                    </tr>
                  </tbody>
                </table>
                <div class="col-9">
                  <div class="text-center">
                    <%=  link_to "利用状況管理", edit_admin_user_path,class: "btn btn-md btn-primary" %>
                  </div>
                </div>
              </div>
        </div>
    </div>
</div>

