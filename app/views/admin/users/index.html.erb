<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="w-100 text-center mt-3 p-3">＜User 管理一覧＞</h2>

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Image</th>
              <th>User ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>User Status</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to admin_user_path(user.id) do %>
                    <%= image_tag user.get_user_image, size: "50x50", class: "img-fluid" %>
                  <% end %>
                </td>
                <td><%= user.id %></td>
                <td>
                  <%= link_to admin_user_path(user.id) do %>
                    <%= user.name %>
                  <% end %>
                </td>
                <td><%= user.email %></td>
                <td>
                  <% if user.is_deleted == false %>
                    <p class="text-success">有効</p>
                  <% else %>
                    <p class="text-secondary">停止</p>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>