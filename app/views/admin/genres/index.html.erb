<div class="container">
  <div class="pt-5">
    <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
      <div class="table-responsive">
        <table class="table table-borderless">
          <tbody class="row justify-content-start">
            <tr class="pt-4">
              <th class="col-12 col-md-10 p-3">ジャンル名</th>
              <td class="col-12 col-md-1"><%= f.text_field :name, placeholder: "ジャンル名" %></td>
              <td class="col-12 col-md-1"><%= f.submit '新規登録', class: "btn btn-sm btn-warning mx-auto d-block" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="pt-3">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="col-12 col-md-4" style="text-align: center; background: #eee">ジャンル</th>
            <th class="col-12 col-md-4"></th>
            <th class="col-12 col-md-4"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="col-12 col-md-4"><%= genre.name %></td>
              <td class="col-6 col-md-4"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-success btn-sm mx-auto" %></td>
              <td class="col-6 col-md-4"></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>