<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1 mt-5">
      <div class="d-flex align-items-end mb-3">
        <h2 class="m-0 font-weight-bold">管理者衣類一覧</h2>
      </div>

      <span class="ml-3">(全<%= @cloths.count %>件)</span>

      <div class="row mt-3 mb-3">
        <% @cloths.each do |cloth| %>
          <div class="col-6 col-sm-6 col-md-4 col-lg-3">
            <div class="card bg-transparent border-0">
              <%= link_to admin_cloth_path(cloth) do %>
                <div class="img-wrap">
                  <%= image_tag cloth.get_cloth_image(0, 0), width: "95", height: "95", format: "jpeg", fallback: "no_image.jpeg" %>
                </div>
              <% end %>
              <div class="card-body">
                <p class="item-details item-name card-text font-weight-bold"><%= cloth.name %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>