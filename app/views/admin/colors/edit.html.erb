<div class="container">
  <div class="row">
   <div class="col-8">
    <%= form_with model: @color, url: admin_color_path(@color.id), method: :patch do |f| %>
    <table class= "table">
     <tr>
      <td>カラー名</td>
       <td><%= f.text_field :name %></td>
       <td><%= f.submit '変更を保存', class: "btn-success  mx-auto" %></td>
     </tr>
    </table>
    <% end %>
   </div>
  </div>
</div>